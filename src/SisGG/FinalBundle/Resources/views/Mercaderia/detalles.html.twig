{%if form %}{% form_theme form "SisGGFinalBundle:Form:personalizarCampos.html.twig" %}{%endif%}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-content">
            <legend>Mercaderia</legend>
            <form class="form-horizontal">
                <div class="pull-right btn-group">
                    <a class="btn" target="_blank" title="Imprimir los datos" onclick="impDetallesMerca('{{form.vars.data.id}}', this)"><i class="icon-print"></i></a>
                </div>
                {{ form_row(form.nombre) }}
                {{ form_row(form.descripcion) }}
                {{ form_row(form.proveedor) }}
<div class="control-group">
    <label class="control-label">Foto de plato</label>
    <div class="controls">
        {%if path !=null%}
                 <div>
                     <a href="#" class="thumbnail span9 zoom-in" onclick="verFoto(this);" title="Ver imagen pantalla completa"><img data-src="holder.js/180x160" id="fotoDetalle"  src="{{asset('uploads/imagenes/')}}{{path}}"/></a>        
                </div>
            {%else%}
            <h4> No hay fotos para mostrar.</h4>
            {%endif%}
    </div>
</div>
                
                  
    {{ form_row(form.precioCosto) }}
    {{ form_row(form.margen) }}
    {{ form_row(form.margenMin) }}
    {{ form_row(form.precioVenta) }}
    {{ form_row(form.iva) }}
    {{ form_row(form.cantidad) }}
    {{ form_row(form.cantidadMinima) }}
    {{ form_row(form.tasa) }}
    {{ form_row(form.categoria) }}
            {%if merca.estadisticas | length > 0%}
                    <h3>Estadisticas</h3>
                            <table class="table table-hover table-bordered table-condensed" data-spy="scroll">
                                <thead class="header">
                                <th>Cantidad</th>
                                <th>UM</th>
                                <th>Costo</th>
                                </thead>
                                {%set totalEst=0%}
                                {%for i in merca.estadisticas%}
                                <tr>
                                    <td>{{i.cantidad}}</td>
                                    <td>{{i.id}}</td>
                                    <td>$ {{i.monto | number_format(2,'.', '')}}</td>
                                </tr> 
                                {%set totalEst=totalEst+i.monto%}
                                {%endfor%}
                                <tfoot>
                                    <td></td>
                                    <td><strong>TOTAL</strong></td>
                                    <td><strong>$ {{totalEst | number_format(2,'.', '')}}</strong></td>
                                </tfoot>
                            </table>
                   {%else%}
                    <h3>No tiene compras registrados</h3>
                    {%endif%}              

            </form>
        </div>
    </div>
</div>