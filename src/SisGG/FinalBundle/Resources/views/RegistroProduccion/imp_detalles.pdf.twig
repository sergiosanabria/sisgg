{%block contenido%}
{{parent()}}
<div text-align="center" padding-bottom="15px" font-size="17" text-decoration="underline">Datos de producción del producto {{producto.producto}}</div>
<div font-size="11" font-type="helvetica">
    <table>
        <tr>
            <td text-align="left" border.type="none">
                <div>
                    <b>Nombre: </b> {{producto.producto}}
                </div>
                <div>
                    <b>Descripción: </b> {{producto.descripcion}}
                </div>
                <div>
                    <b>Tipo: </b> {%if producto.tipo==1%}Producción{%else%}Pérdida{%endif%}
                </div>
                <div>
                    <b>Fecha: </b> {{producto.fecha |date("Y/m/d H:i")}}
                </div>
                <div>
                    <b>Cantidad: </b> {{producto.cantidad}}
                </div>
                <div>
                    <b>Unidad de medida:: </b> {{producto.tasa}}
                </div>
                <div>
                    <b>Precio de costo: </b>$ {{producto.costo}}
                </div>
            </td>
           

        </tr>
    </table>
       {%if producto.tipo%}
          {%if producto.itemRegistroProduccion | length >0%}
    <h3>Ingredientes</h3>
    <table>
        <tr background-color="#F8F8F8">
            <td text-align="center"><b>Nombre</b></td>
            <td text-align="center"><b>Cantidad</b></td>
            <td text-align="center"><b>Unidad de medida ing.</b></td>
            <td text-align="center"><b>Costo</b></td>
            <td text-align="center" width="60px"><b>Utilizado</b></td>
        </tr> 
                   {%for i in producto.itemRegistroProduccion %}  
        <tr>
            <td padding="3px">{{i.producto}}</td>
            <td padding="3px" width="85px" text-align="center">{{i.cantidad}}</td>
            <td padding="3px">{{i.tasa}}</td>
            <td  padding="3px" width="85px" text-align="center">${{i.costo}}</td>
            <td padding="3px" text-align="center" width="60px">{%if i.utilizado==1%}SI{%else%}NO{%endif%}</td>

        </tr>
                        {%endfor%}
    </table>
    {%else%}
    <h3>No contiene ingredientes registrados</h3>
        {%endif%}
    {%endif%}
</div>

