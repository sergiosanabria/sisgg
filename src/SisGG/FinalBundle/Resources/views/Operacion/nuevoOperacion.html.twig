{% extends app.request.isXmlHttpRequest ? "::ajax.html.twig" : "SisGGFinalBundle:Cajero:cajero.html.twig" %}
{%if form%}{% form_theme form "SisGGFinalBundle:Form:fields.html.twig" %}{%endif%}
{%block ruta%}
<li>
    <a href="#">Inicio</a> <span class="divider">/</span>
</li>
<li>
    <a href="#">Operacion</a> <span class="divider">/</span>
</li>
<li>
    <a href="#">Nueva Operacion</a>
</li>
{%endblock%}
{% block content %}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-content">
            <legend>Nueva Operacion</legend>
            <form class="form-horizontal" action="{{ path('nuevo_operacion') }}" method="post">
                <fieldset id="formNuevoOperacion">
                    <div class="span6">
                            {{form_row(form.tipoOperacion,{'attr':{"class":"span9"} })}}
                            {{form_row(form.de,{'attr':{"class":"span9"} })}}
                            {{form_row(form.a,{'attr':{"class":"span9"} })}}
                            {{form_row(form.tipoFactura,{'attr':{"class":"span9"} })}}
                            {{form_rest(form)}}
                    </div>        
                </fieldset>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <button onclick='history.back();' type="button"class="btn">Cancelar</button>
                </div>    
            </form>
        </div>
    </div><!--/span-->
</div><!--/row-->
<hr>
{% endblock %}
{%block javascripts%}
{{parent()}}
{%endblock%}
{% block ajax %}
{% endblock %}
