{%if r ==true%}
<form method="post" id="formDescuento">
    <fieldset id="datosDescuento">
<div class="controls">
    <div class="input-prepend input-append">
        <span class="add-on">%</span>
        <input class="" type="number" autocomplete="off" min="0" max="100" pattern="[0-9]*[.]?[0-9]+" onkeypress="return isNumberKey(this,event);" id="txtDescuento" name="txtDescuento" required="required" tipo="spinner" ayuda="Porcentaje de descuento por pago en especies." value="{{empleado.cargo.descuento}}">
        <span class="help-inline">
                {{error}}
            </span>
    </div><p class="help-block">Porcentaje de descuento por pago en especies.</p>
    
</div>
    <div class="form-actions">
        <button class="btn btn-primary"  type="submit">Aceptar</button>
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancelar</button>
    </div>
        <div id="divCuenta" style="display: none"> <input type="hidden" id="idEmpleado" name="idEmpleado"> </div>
        </fieldset>
</form>
{%else%}
<div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <h4>¡Muy bien!</h4> Se ha modificado correctamente el porcentaje de descuento.
</div>
<input type="hidden" id="hiddenDescuento" value="{{empleado.cargo.descuento}}">
{%endif%}