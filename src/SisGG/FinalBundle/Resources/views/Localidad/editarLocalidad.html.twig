{% block content %}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-content">
            <legend>Editar Localidad</legend>
            <form class="form-horizontal" action="{{ path('editar_localidad') }}?id={{id}}" method="post">
                <fieldset id="formEditarLocalidad">
                    <div class="span6">
                        {{form_widget(form)}}     
                </fieldset>
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <button id="cancelCliente"  onclick="cancelarLocalidad()" type="button"class="btn">Cancelar</button>
                </div>    
            </form>
        </div>
    </div><!--/span-->
</div><!--/row-->
<hr>
{% endblock %}
{%block javascripts%}
