{% extends app.request.isXmlHttpRequest ? "::ajax.html.twig" : "SisGGFinalBundle:Cajero:cajero.html.twig" %}
{%block ruta%}
<li>
    <a href="#">Inicio</a> <span class="divider">/</span>
</li>
<li>
    <a href="#">Localidades</a>
</li>
{%endblock%}
{% block content %}
<div class="row-fluid">
    <div class="box span12">
        <div class="box-content">
            <legend>Localidades de {{provincia}}</legend>
            <label><a href="{{path('nueva_localidad')}}?id={{provincia.id}}"><i class="icon icon-plus-sign"></i>Nueva Localidad</a></label><br>
            <table class="table table-striped table-bordered" id="example">
                <thead class="header">
                    <tr>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for localidad in provincia.localidad%}
                        <tr>
                            <td>{{localidad.nombre}}</td>
                            <td>
                                <a rel="tooltip" title="Editar" href="{{path('editar_localidad')}}?id={{localidad.id}}"><i class="icon-edit"></i></a>
                                <a rel="tooltip" title="Eliminar" href="#{{localidad.id}}" data-toggle="modal"><i class="icon-remove"></i></a>
                            </td>                
                        </tr>   
                {% endfor %}       
                    </tbody>
                </table>    
            </div>
        </div><!--/span-->
    </div><!--/row-->
    <hr>
{% endblock %}
