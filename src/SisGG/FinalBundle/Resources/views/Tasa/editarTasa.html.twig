{% extends "::base.html.twig" %}
{%block title%}Editar tasa {{nombre}}{%endblock%}
{%block ruta%}
<li>
    <a href="{{path('index')}}">Inicio</a> <span class="divider">/</span>
</li>
<li>
    <a href="{{path('ums')}}">Unidades de medida</a> <span class="divider">/</span>
</li>
<li>
    <a href="#">Editar tasa {{nombre}}</a>
</li>
{%endblock%}
{% block content %}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-content">
            <form action="{{ path('modificarTasa', {'id':id}) }}" method="post" class="form-horizontal">
    <legend>Editar tasa {{nombre}}</legend>
        {% if error %}
    <div class="alert alert-error">
        <button type='button' class='close' data-dismiss='alert'>Ã—</button>
        <strong>{{ error }}</strong> 
    </div>  
        {% endif %}
    {{ form_widget(form)}}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary" >Guardar Cambios</button>
        <a href="{{path('ums')}}" type="button" class="btn">Cancelar</a>
    </div>        
</form>
 </div>
    </div>
</div> 
{%endblock%}

{% block javascripts %}
{{parent()}}

<script type="text/javascript">
    $(document).ready(function  (){
                if ('{{pivote}}'=='1'){
                    $('#sisgg_finalbundle_tasatype_valor').attr('readonly', true);
                }
                var div=document.getElementById('sisgg_finalbundle_tasatype_um').parentNode;                 
                   $(div).append('<input type="text" disabled="true" value="{{umPadre}}" id="umPadre">');
               });
    
    </script>
{% endblock%}