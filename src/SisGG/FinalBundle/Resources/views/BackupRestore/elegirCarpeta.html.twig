{% extends app.request.isXmlHttpRequest ? "::ajax.html.twig" : "SisGGFinalBundle:Cajero:cajero.html.twig" %}
{%if form%}{% form_theme form "SisGGFinalBundle:Form:fields.html.twig" %}{%endif%}
{%block title%}Seleccionar carpeta de back-up{%endblock%}
{%block ruta%}
<li>
    <a href="#">Inicio</a> <span class="divider">/</span>
</li>
<li>
    <a href="{{path('parametros')}}">Parámetros</a>
</li>
{%endblock%}
{% block content %}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-content">
            <legend>Seleccionar carpeta de back-up</legend>
            <form class="form-horizontal" action="{{ path('elegirCarpetaBackup') }}" method="post">
                {% if error %}
                    <div class="alert alert-block">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        <h4>¡CUIDADO!</h4>
                        {{ error }}
                    </div>
                {% endif %}
                    <div class="alert alert-info">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        <h4>¡ATENCIÓN!</h4>
                        La carpeta en la cual se guardara el archivo de backup debe tener permisos.
                    </div>
                <fieldset>
                    <div class="control-group">
                        <label class="control-label" >Carpeta (*)</label>
                        <div class="controls">
                            <input type="text" id="carpeta" name="carpeta" value="{{empresa.carpeta}}" required="required" class="span8">
                        </div>
                    </div>
                         <div class="form-actions">
                                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                                <a href="{{path('parametros')}}" class="btn">Cancelar</a>
                            </div> 
                        <div><br></div>
                        <div class="row-fluid sortable ui-sortable">
				<div class="box span12">
					<div class="box-header">
						<h2><i class="icon-th"></i><span class="break"></span>Seleccione una carpeta</h2>
						<div class="box-icon">
							<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
						</div>
					</div>
                                        <div class="box-content" style="max-height: 480px; overflow-y: auto;">
                  	                    <div id="container_id"></div>

                                        </div>
				</div><!--/span-->
			</div>
                </fieldset>
                  
            </form>
        </div>
    </div><!--/span-->
</div><!--/row-->
<hr>
{% endblock %}
{%block modal%}
{%endblock%}
{%block javascripts%}
{{parent()}}  
<script>
$(document).ready(function (ev){
  $('#container_id').fileTree({script:"{{path('fileChooser')}}"}, function(file) {
        });
});




    </script>

{%endblock%}
