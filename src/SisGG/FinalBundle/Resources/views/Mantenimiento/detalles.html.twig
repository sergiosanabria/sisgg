{%if form %}{% form_theme form "SisGGFinalBundle:Form:personalizarCampos.html.twig" %}{%endif%}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-content">
            <legend>Producto de mantenimiento</legend>
            <form class="form-horizontal">
                <div class="pull-right btn-group">
                    <a class="btn" target="_blank" title="Imprimir los datos" onclick="impDetallesMante('{{form.vars.data.id}}', this)"><i class="icon-print"></i></a>
                </div>
                {{form_widget(form)}}
                    {%if form.vars.data.estadisticas | length > 0%}
                    <h3>Estadisticas</h3>
                            <table class="table table-hover table-bordered table-condensed" data-spy="scroll">
                                <thead class="header">
                                <th>Cantidad</th>
                                <th>UM</th>
                                <th>Costo</th>
                                </thead>
                                {%set totalEst=0%}
                                {%for i in form.vars.data.estadisticas%}
                                <tr>
                                    <td>{{i.cantidad}}</td>
                                    <td>{{i.id}}</td>
                                    <td>$ {{i.monto | number_format(2,'.', '')}}</td>
                                </tr>
                                {%set totalEst=totalEst+i.monto%}
                                {%endfor%}
                                <tfoot>
                                    <td></td>
                                    <td><strong>TOTAL</strong></td>
                                    <td><strong>$ {{totalEst | number_format(2,'.', '')}}</strong></td>
                                </tfoot>
                            </table>
                   {%else%}
                    <h3>No tiene compras registrados</h3>
                    {%endif%} 
            </form>
        </div>
    </div>
</div>
