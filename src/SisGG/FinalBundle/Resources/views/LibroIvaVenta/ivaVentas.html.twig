{% extends app.request.isXmlHttpRequest ? "::ajax.html.twig" : "SisGGFinalBundle:Cajero:cajero.html.twig" %}
{%block ruta%}
<li>
    <a>Inicio</a> <span class="divider">/</span>
</li>
<li>
    <a href="#">Libro IVA ventas</a>
</li>
{%endblock%}
{% block content %}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-content" id="contenido">
            <form method="get" name="f" id="f"></form>
            <legend id="legend">Libro IVA Ventas del corriente mes</legend>  
            
            {% if msj %}unidadMedida
            <div class="alert alert-success">
            <button type='button' class='close' data-dismiss='alert'>×</button>
            <strong>Muy bien! </strong> {{ msj }}
            </div>  
        {% endif %}
        {% if error %}
            <div class="alert alert-block">
                <button type="button" class="close" data-dismiss="alert">×</button>
                <h4>¡CUIDADO!</h4>
                {{ error }}
            </div>
        {% endif %}
        
        <div class="pull-right btn-group">
            <a class="btn" target="_blank" title="Imprimir lista de elemntos buscados" onclick="imprimirTabla(this);"><i class="icon-print"></i></a>
        </div>
        <div><br><br></div>
        <div class="input-append">
            <select id="1BCombo" onchange="buscar1();">
                <option value="0" title="Busca solo por años">Buscar sólo por años</option>
                <option value="1">Enero</option><option value="2">Febrero</option>
                <option value="3">Marzo</option><option value="4">Abril</option>
                <option value="5">Mayo</option><option value="6">Junio</option>
                <option value="7">Julio</option><option value="8">Agosto</option>
                <option value="9">Septiembre</option><option value="10">Octubre</option>
                <option value="11">Noviembre</option><option value="12">Diciembre</option>
            </select>
                <input class="" type="number" autocomplete="off" onchange="buscar1();" onkeyup="buscar1();"  min="0" onkeypress="return isNumberKey(this,event);" id="1BAño"  placeholder="Ej. 2013">
             </div>    
        <div id="divTabla" style="text-align: center">
       <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
            <thead class="header">
            <tr>
                <th>Fecha aaaa/mm/dd</th>
                <th style="text-align: center">Tipo</th>
                <th>Número</th>
                 <th>Cliente</th>
                <th>CUIT</th>
                <th>Neto</th>
                {%for i in tasas%}
                    {%if i.gravado%}
                    <th>IVA gravado {{i.tasa}} %</th>
                    {%else%}
                    <th>IVA no gravado {{i.tasa}} %</th>
                   {%endif%} 
                {%endfor%}
                <th>Acrecentamiento</th>
                <th>Total</th>
            </tr>
            </thead>
           {%set j=0%}
            {% for i in items%}
            <tr id="{{i.id}}">
                <td>{{i.fecha | date("Y/m/d")}}</td>
                <td style="text-align: center;width: fit-content">{{i.tipo}}</td>
                <td>{{i.venta.serie}} - {{i.venta.numero}}</td>
                <td>{{i.razonSocial}}</td> 
                <td>{{i.cuit}}</td> 
                <td>{{i.Neto}}</td>
                {%if (i.tipo=='A' or i.tipo=='B') %}
                    {%for item in i.item%}
                        <td>{{item.total}}</td>
                    {%endfor%}
                        {%if (i.item|length < tasas|length) %}
                            {% for j in range(1,(tasas|length - i.item|length )) %}
                                    <td>0.00</td>
                            {% endfor %}  
                        {%endif%}
                {%else%}
                    {% for j in range(1,(tasas|length)) %}
                            <td>0.00</td>
                    {% endfor %}
                {%endif%}
                <td>{{i.acrecent}}</td>
                <td>{{i.total}}</td>   
            </tr>   
            {% endfor %}
        </table>
            </div>
        </div>        
    </div>        
</div>        
{% endblock %}
