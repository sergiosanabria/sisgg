    to the first child (see RepeatedTypeValidatorExtension).
    #}
    {{ block('form_rows') }}
{% endspaceless %}
{% endblock repeated_row %}

{% block form_row %}
{% spaceless %}
        {%if attr and attr['class'] is defined and attr['class'] =='collection-item'%}
             <tr id="{{id}}" {%for child in form%}{% if child.vars.errors|length %}class="error"{%endif%}{%endfor%}>
                {%for child in form%}
                        {{form_widget(child)}}
                {%endfor%}
                <td style="text-align: center">
                    <a href="#" rel="tooltip" title="Eliminar" onclick="eliminarFila(event,'{{id}}');"><i class="icon icon-remove-sign"></i></a>
                </td>     
             </tr>
        {%else%}    
            {%if errors|length > 0 %}
                <div class="control-group error">
            {%else%}
                <div class="control-group">        
            {%endif%}    
            {% if not compound%}
                    {{ form_label(form) }}    
                    <div class="controls">
                        {{ form_widget(form) }}
                        {{ form_errors(form) }}
                    </div>
            {%else%}
                    {{ form_widget(form) }}
                    {{ form_errors(form) }}    
            {%endif%}            
                </div>            
        {%endif%}            
{% endspaceless %}
{% endblock form_row %}

