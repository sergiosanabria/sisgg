{%if form %}{% form_theme form "SisGGFinalBundle:Form:personalizarCampos.html.twig" %}{%endif%}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-content">
            <legend>Nota de pedido N°{{id}}  
                <div class="pull-right btn-group">
                    <a class="btn" target="_blank" title="Imprimir nota de pedido" onclick="imprimirDetalle(this,'{{id}}')"><i class="icon-print"></i></a>
                    {%if id !=null%} <a href="#" class="btn" onclick="detallesModalNota('{{id}}');" title="Ver detalles de la compra"><i class="fa-icon-list-alt"></i></a>{%endif%} 
                </div>
                </legend>
            <form class="form-horizontal">
               
                    {{ form_row(form.proveedor) }}
                    
                    
            <div class="control-group">
                    <label class="control-label">Fecha de emisión</label>
                    <div class="controls">
                        <input  type="datetime" disabled="disabled" value="{{fecha | date("d/m/Y g:ia")}}">
                    </div>
                </div>               
                    {%if items | length > 0%}
                    <h3>Productos</h3>
                            <table class="table table-hover table-bordered table-condensed" data-spy="scroll">
                                <thead class="header">
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Tasa</th>
                                <th>Precio unitario</th>
                                <th>Total</th>
                                </thead>
                                {%for i in items%}
                                <tr>
                                    <td>{{i.producto}}</td>
                                    <td>{{i.cantidad}}</td>
                                    <td>{{i.tasa}}</td>
                                    <td>{{i.precioCosto}}</td>
                                    <td>{{i.total}}</td>
                                </tr>
                                {%endfor%}
                            </table>
                    {{ form_row(form.total) }} 
                   {%else%}
                    <h3>No tiene productos registrados</h3>
                    {%endif%}
                </form>
            </div>
        </div>
    </div>