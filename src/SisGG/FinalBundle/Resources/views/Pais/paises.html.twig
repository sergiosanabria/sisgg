{% extends app.request.isXmlHttpRequest ? "::ajax.html.twig" : "SisGGFinalBundle:Cajero:cajero.html.twig" %}
{%block ruta%}
<li>
    <a href="#">Inicio</a> <span class="divider">/</span>
</li>
<li>
    <a href="#">Paises</a>
</li>
{%endblock%}
{% block content %}
<div class="row-fluid">
    <div class="box span12">
        <div class="box-content">
            <legend>Paises</legend>
            <label><a href="{{path('nuevo_pais')}}"><i class="icon icon-plus-sign"></i>Nuevo Pais</a></label><br>
            <table class="table table-striped table-bordered" id="example">
                <thead class="header">
                    <tr>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for pais in paises%}
                        <tr>
                            <td>{{pais.nombre}}</td>
                            <td>
                                <a rel="tooltip" title="Editar" href="{{path('editar_pais')}}?id={{pais.id}}"><i class="icon-edit"></i></a>
                                <a rel="tooltip" title="Ver Provincias" href="{{path('provincias')}}?id={{pais.id}}"><i class="icon-th-list"></i></a>
                                <a rel="tooltip" title="Eliminar" href="#{{pais.id}}" data-toggle="modal"><i class="icon-remove"></i></a>
                            </td>                
                        </tr>   
                {% endfor %}       
                    </tbody>
                </table>    
            </div>
        </div><!--/span-->
    </div><!--/row-->
    <hr>
{% endblock %}
