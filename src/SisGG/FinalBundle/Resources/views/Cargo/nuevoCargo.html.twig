{% block content %}
<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-content">
<form action="{{ path('nuevoCargo') }}" method="post" class="form-horizontal">
    <legend>Nuevo cargo</legend>
                    {% if error %}
                    <div class="alert alert-error">
                        <button type='button' class='close' data-dismiss='alert'>Ã—</button>
                        <strong>{{ error }}</strong> 
                    </div>  
                    {% endif %}
                    {{ form_row(form.nombre) }} 
                    {{ form_row(form.descripcion) }} 
                    {{ form_row(form.tipo) }} 
                    
                    <div id="porDia" style="display: none">{{ form_row(form.porDia) }}</div>  
                    <div id="porFecha" style="display: none">{{ form_row(form.porFecha) }}  </div>
                    <div id="porDiaSemana" style="display: none">{{ form_row(form.porDiaSemana) }}  </div>
                    {{ form_row(form.monto) }} 
                    {{ form_row(form.negativo) }}   
                    {{ form_row(form.descuento) }}   
    {{ form_rest(form) }}
                   
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Guardar cambios</button>
                    <a type="button" class="btn" href="">Cancelar</a>
                </div>
            
        </form>
            </div>
        </div>
</div>
 {% endblock %}
