{% extends app.request.isXmlHttpRequest ? "::ajax.html.twig" : "SisGGFinalBundle:Cajero:cajero.html.twig" %}
{%block ruta%}
<li>
    <a href="#">Inicio</a> <span class="divider">/</span>
</li>
<li>
    <a href="#">Usuarios</a>
</li>
{%endblock%}
{% block content %}
<div class="row-fluid">
    <div class="box span12">
        <div class="box-content">
            <legend>Usuarios<div class="pull-right btn-group">
                        <a title="Nuevo Usuario" href="{{path('usuario_nuevo')}}" class="btn"><i class="fa-icon-plus-sign"></i></a>
                        <a class="btn"><i class="icon-print"></i></a>
                    </div>
            </legend>
            <table class="table table-striped table-bordered" id="example">
                <thead class="header">
                    <tr>
                        <th>Nombre de usuario</th>
                        <th>Email</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for usuario in usuarios%}
                        <tr>
                            <td>{{usuario.username}}</td>
                            <td>{{usuario.email}}</td>
                            <td>{%if usuario.isActive%}<span class="label label-success">Activo</span>{%else%}<span class="label label-important">Inactivo</span>{%endif%}</td>
                            <td>
                                <a rel="tooltip" title="Editar" href=""><i class="icon-edit"></i></a>
                                <a rel="tooltip" title="Eliminar" href="#" data-toggle="modal"><i class="icon-remove"></i></a>
                            </td>                
                        </tr>   
                {% endfor %}       
                    </tbody>
                </table>    
            </div>
        </div><!--/span-->
    </div><!--/row-->
{% endblock %}    

